/* pages/scrollnav/scrollnav.wxss */

page {
  width: 100%;
  height: auto;
  /* background-color: #b60005; */
}



/* 通用 */

.bra6 {
  border-radius: 6rpx;
}

.mb30 {
  margin-bottom: 30rpx;
}

.elli {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pinkRed {
  color: #d9172a;
}

.tui-fixed-x{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
}
.tui-city-scroll{
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  white-space: nowrap;
  border-bottom: 2rpx solid #CCCCCC;

}
.tui-city-scroll text{
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  white-space: nowrap;
  margin: 0 15rpx;

}
.tui-nav-li{
  font-size: 33rpx;
  padding: 0 10rpx;
}
.tui-nav-li:first-child{padding-left: 16rpx;}
.tui-nav-li:last-child{padding-right: 16rpx;}
.tui-nav-active{
  color: red;
  border-bottom: 4rpx solid red;
  padding-bottom: 27rpx;

}
.tui-fixed-y{
  width: 100%;
  height: calc(100% - 100rpx);
  position: fixed;
  bottom: 0;
  left: 0;
}
.tui-city-scroll-y{
  margin: 0 20rpx;
  height: 100%;
  box-sizing: border-box;
}
.tui-list-head{
  height: 50px;
  line-height: 50px;
  font-size: 32rpx;
}
.tui-list-li-item{
    display: inline-block;
    width: 220rpx;
    margin: 4rpx 8rpx;
    height: 156rpx;
    background-size: cover;
}
.tui-list-li-item image{
  width: 100%;
  height: 100%;
}
/* pages/project/project.wxss */
/* 楼盘信息 */
page {
  width: 100%;
  height: auto;
  background-color: #b60005;
}
/* 通用 */

.bra6 {
  border-radius: 6rpx;
}

.mb30 {
  margin-bottom: 30rpx;
}

.elli {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.project {
  overflow: hidden;
  padding: 40rpx 30rpx;
}
.houseInfo>.title {
  border-bottom: 1px solid #f5f5f9;
  padding: 20rpx 30rpx;
  color: #333;
  background-color: #f8e6e6;
  border-top-left-radius: 6rpx;
  border-top-right-radius: 6rpx;
}

.houseInfo>.title text {
  font-size: 36rpx;
  font-weight: bold;
}
.houseInfo .box{
    background: #f8e6e6;
    margin-bottom: 30rpx;
    padding: 20rpx 30rpx;
    position: relative;
}
.houseInfo .boxTop {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: nowrap;
  align-content: center;
  
}

.houseInfo .tlr {
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}

.houseInfo .boxTop .img {
  width: 260rpx;
  height: 215rpx;
  position: relative;
  /* background: rgb(252, 179, 22); */
}
.houseInfo .boxTop .img .saling{
 position: absolute;
left: 20rpx;
font-size: 20rpx;
color: white;
background-color: #b60005;
width: 60rpx;
text-align: center;
padding: 2rpx 0 4rpx;
top: 15rpx;

}
.houseInfo .boxTop .img image {
  width: 100%;
  height: 100%;
}

.houseInfo .boxTop .info {
  height: 215rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: nowrap;
  align-content: center;
  /* background: white; */
  color: rgb(15, 15, 15);
  margin-left: 15rpx;
}

.houseInfo .boxTop .info>view {
  width: 385rpx;
}
.houseInfo .boxBottom{
  display: flex;
flex-direction: row;
justify-content: space-between;
align-items: flex-start;
flex-wrap: nowrap;
align-content: center;
padding: 8rpx 40rpx;
margin-top: 10rpx;
font-size: 22rpx;
background: #F8DEDE;
color: #FF5959;
}
.houseInfo .boxBottom .left{
  width: 450rpx;
}
.houseInfo .boxBottom>view{
  /* position: relative; */
}
.houseInfo .boxBottom .iconhongbao{
position: absolute;
left: 30rpx;
}
.houseInfo .boxBottom .iconyoujiantou-tianchong{
position: absolute;
right: 30rpx;
}
.louPanName {
  font-size: 32rpx;
  color: rgb(66, 65, 65);
  font-weight: 700;
}

.projectPrice {
  color: red;
  font-weight: bold;
  font-size: 30rpx;
}

.projectInfo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: nowrap;
  align-content: center;
  font-size: 28rpx;
}

.fitmentType {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: nowrap;
  font-size: 20rpx;
}
.fitmentType text{
  border: 1px solid #7C828A;
  padding:0rpx 10rpx 2rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
  color: rgb(100, 95, 95);
}

.noData {
  padding: 10rpx;
  text-align: center;
  font-size: 24rpx;
   color: white;
}

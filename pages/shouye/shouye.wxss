/* free-vessel 中间模块 */

.free-vessel {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: nowrap;
  align-content: center;
  padding: 20rpx 30rpx;
  background: #f8e6e6;
}

.free-vessel view {
  /* width: 215rpx;
  height: 215rpx; *//* background: orange; */
  text-align: center;
}

.free-vessel view image {
  width: 70rpx;
  height: 70rpx;
}

.free-vessel view text {
  font-size: 28rpx;
}

/* videoEnter */

.videoEnter {
  height: 210rpx;
}

.videoEnter image {
  width: 100%;
  height: 100%;
}

/* 公告start */

.notice {
  height: 50rpx;
  line-height: 52rpx;
  padding: 10rpx 0;
  background-color: #f8e6e6;
  font-size: 24rpx;
  color: rgb(10, 10, 10);
}

.icontongzhi {
  position: absolute;
  margin: 0rpx 30rpx;
}

.swiper-notice {
  font-size: 28rpx;
  color: #fa6016;
}

.swiper-container {
  margin-left: 70rpx;
  width: 100%;
  height: 100%;
}

/* 楼盘信息 */

.houseInfo>.title {
  border-bottom: 1px solid #f5f5f9;
  padding: 20rpx 30rpx;
  color: #333;
  background-color: #f8e6e6;
  border-top-left-radius: 6rpx;
  border-top-right-radius: 6rpx;
}

.houseInfo>.title text {
  font-size: 36rpx;
  font-weight: bold;
}

.houseInfo .box {
  background: #f8e6e6;
  margin-bottom: 30rpx;
  padding: 20rpx 30rpx;
  position: relative;
}

.houseInfo .boxTop {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: nowrap;
  align-content: center;
}

.houseInfo .tlr {
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}

.houseInfo .boxTop .img {
  width: 260rpx;
  height: 225rpx;
  position: relative;
  /* background: rgb(252, 179, 22); */
}

.houseInfo .boxTop .img .saling {
  position: absolute;
  left: 20rpx;
  font-size: 20rpx;
  color: white;
  background-color: #b60005;
  width: 60rpx;
  text-align: center;
  padding: 2rpx 0 4rpx;
  top: 15rpx;
}

.houseInfo .boxTop .img image {
  width: 100%;
  height: 100%;
}

.houseInfo .boxTop .info {
  height: 225rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: nowrap;
  align-content: center;
  /* background: white; */
  color: rgb(15, 15, 15);
  margin-left: 15rpx;
}

.houseInfo .boxTop .info>view {
  width: 385rpx;
}

.houseInfo .boxBottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: nowrap;
  align-content: center;
  padding: 8rpx 40rpx;
  margin-top: 10rpx;
  font-size: 22rpx;
  background: #f8dede;
  color: #ff5959;
}

.houseInfo .boxBottom .left {
  width: 450rpx;
}

.houseInfo .boxBottom>view {
  /* position: relative; */
}

.houseInfo .boxBottom .iconhongbao {
  position: absolute;
  left: 30rpx;
}

.houseInfo .boxBottom .iconyoujiantou-tianchong {
  position: absolute;
  right: 30rpx;
}

.louPanName {
  font-size: 32rpx;
  color: rgb(66, 65, 65);
  font-weight: 700;
}

.projectPrice {
  color: red;
  font-weight: bold;
  font-size: 30rpx;
}

.projectInfo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: nowrap;
  align-content: center;
  font-size: 28rpx;
}

.fitmentType {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: nowrap;
  font-size: 20rpx;
}

.fitmentType text {
  border: 1px solid #7c828a;
  padding: 0rpx 10rpx 2rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
  color: rgb(100, 95, 95);
}

.noData {
  padding: 10rpx;
  text-align: center;
  font-size: 24rpx;
  color: white;
}

/* 搜索框样式 */

.search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  background-color: whitesmoke;
  border: 1rpx solid whitesmoke;
  border-radius: 5rpx;
  padding: 10rpx 0;
}

/* 搜索框提示文字样式 */

.search input {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left: 30rpx;
}

.searchCity {
  width: 30%;
  border-right: 1rpx solid black;
  text-align: center;
}

.iconsousuo {
  width: 95rpx;
  text-align: center;
}

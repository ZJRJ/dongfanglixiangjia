/* pages/shouye/shouye.wxss */

page {
  width: 100%;
  height: auto;
  background-color: #b60005;
}

:-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

.shouye {
  overflow: hidden;
  padding: 40rpx 30rpx;
}

/* 通用 */

.bra6 {
  border-radius: 6rpx;
}

.mb30 {
  margin-bottom: 30rpx;
}

.elli {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

